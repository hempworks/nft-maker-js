{
  "name": "nft-maker",
  "version": "1.0.0",
  "main": "./build/index.js",
  "bin": {
    "nft-maker": "./build/index.js"
  },
  "scripts": {
    "start": "nodemon --watch src --exec 'tsc' -e ts",
    "create": "npm run build && npm run test",
    "build": "tsc",
    "package": "pkg . --targets node14-macos-x64 --output nft-maker",
    "local": "sudo npm i -g && nft-maker"
  },
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "author": "Hemp",
  "license": "MIT",
  "description": "configuration-based NFT image generator",
  "keywords": [
    "nft",
    "image",
    "processing"
  ],
  "dependencies": {
    "@types/sharp": "^0.29.2",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "cosmiconfig": "^7.0.1",
    "figlet": "^1.5.2",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "pkg": "^5.3.2",
    "sharp": "^0.29.1",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.174",
    "@types/node": "^16.10.1",
    "jest": "^27.2.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
